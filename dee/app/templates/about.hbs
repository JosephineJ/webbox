		<div class="part-1">
			<h3 class="center">Want to read the comic now?</h3>
			{{#link-to 'comic.intro' class='button mt-1'}}Read Comic{{/link-to}}
		</div>
		<div class="part-1">
			<div class="content-box">
				<h3 class="center">Want to get into contact?</h3>
				<p>{{#link-to 'contact' class="button"}}Contact me{{/link-to}}</p>
			</div>
		</div>
	</div>
</section>


